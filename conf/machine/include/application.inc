# To support layered ipk generation
APPLICATION_LAYER_ARCH = "${MACHINE}-application"
PACKAGE_EXTRA_ARCHS:append = " ${APPLICATION_LAYER_ARCH}"

# See release note for configuration details.
RDK_ARTIFACTS_BASE_URL ?= ""

APPLICATION_LAYER_VERSION = "4.0.6"

APPLICATION_IPK_PATH = "${APPLICATION_LAYER_ARCH}/${APPLICATION_LAYER_VERSION}/ipks/${BUILD_VARIANT}"
APPLICATION_IPK_SERVER_PATH = "${RDK_ARTIFACTS_BASE_URL}/${APPLICATION_IPK_PATH}"

# To set the remote feeds
IPK_FEED_URIS += " \
                ${APPLICATION_LAYER_ARCH}##${APPLICATION_IPK_SERVER_PATH} "
